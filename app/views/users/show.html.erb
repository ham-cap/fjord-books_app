<h1><%= User.human_attribute_name(:show) %></h1>

<p>
  <strong><%= User.human_attribute_name(:id) %>:</strong>
  <%= @user.id %>
</p>

<p>
  <strong><%= User.human_attribute_name(:nickname) %>:</strong>
  <%= @user.nickname %>
</p>

<p>
  <strong><%= User.human_attribute_name(:zipcode) %>:</strong>
  <%= @user.zipcode %>
</p>

<p>
  <strong><%= User.human_attribute_name(:address) %>:</strong>
  <%= @user.address %>
</p>

<p>
  <strong><%= User.human_attribute_name(:email) %>:</strong>
  <%= @user.email %>
</p>

<p>
  <strong><%= User.human_attribute_name(:introduce) %>:</strong>
  <%= @user.introduce %>
</p>

<%= link_to User.human_attribute_name(:back_to_user_index), users_path %>
<% if @user.id == current_user.id %>
  <%= link_to User.human_attribute_name(:edit), edit_user_registration_path(id: current_user.id) %>
<% end %>
